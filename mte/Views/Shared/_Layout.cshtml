<!DOCTYPE html>

<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-language" content="ru-RU" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>MTE / @ViewBag.Title</title>

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/uikit")

    @RenderSection("scripts", required: false)
</head>

<body>

    <section class="uk-section-primary uk-preserve-color">
        <div uk-sticky="animation: uk-animation-slide-top; sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent uk-light; top: 200">
            <nav class="uk-navbar-container" uk-navbar>
                <div class="uk-navbar-left">
                    <a href="@Url.Action("Index", "Home", new { area = "" })" class="uk-navbar-item uk-logo">
                        <span uk-icon="icon: server; ratio: 1;" class="uk-margin-small-right"></span>
                        MTE
                    </a>

                    @Html.Partial("Menu/TopMenu")
                </div>

                <div class="uk-navbar-right">
                    @Html.Partial("_LoginPartial")
                </div>
            </nav>
        </div>
    </section>


    <section uk-height-viewport="expand: true" class="uk-section uk-section-default uk-section-xsmall">
        <div class="uk-container uk-container-expand">
            @RenderBody()
        </div>
    </section>

    @Html.Partial("Footer/Footer")

</body>
</html>
