@model mte.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Register", "Account", new { area = "" }, FormMethod.Post, new { @class = "uk-form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "uk-text-emphasis" })

    <fieldset class="uk-fieldset">
        <legend class="uk-legend">Данные для входа в систему</legend>
        <div class="uk-margin">
            @Html.LabelFor(m => m.Email, new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.TextBoxFor(m => m.Email, new { @class = "uk-input" })
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(m => m.Password, new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.PasswordFor(m => m.Password, new { @class = "uk-input" })
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "uk-input" })
            </div>
        </div>
    </fieldset>

    <fieldset class="uk-fieldset">
        <legend class="uk-legend">Пользователь</legend>
        <div class="uk-margin">
            @Html.LabelFor(m => m.FirstName, new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "uk-input" })
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(m => m.Name, new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.TextBoxFor(m => m.Name, new { @class = "uk-input" })
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(m => m.SurName, new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.TextBoxFor(m => m.SurName, new { @class = "uk-input" })
            </div>
        </div>
        <div class="uk-margin">
            @Html.LabelFor(m => m.Phone, new { @class = "uk-form-label" })
            <div class="uk-form-controls">
                @Html.TextBoxFor(m => m.Phone, new { @class = "uk-input" })
            </div>
        </div>
    </fieldset>

    <div class="">
        <div class="uk-text-right">
            <input type="submit" class="uk-button uk-button-primary" value="Регистрация" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
